action{ //list of all actions and spells n shit
	id int [unique] PK
	name varchar(50) [unique] //move , fireball , 
	description varchar(1028) 
	effect_range int
	range int
	effect enum("demage","take","stun",...)
	item_id int FK ?
}

combat_log{
	id int [unique] PK
	combat_id int FK
	character int FK
	action_event int FK
}

action_log{
	id int [unique] PK
	type enum("rest","enter combat","take item","idk",...)
	character_id int FK
}

